<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoIt.Views.AddEditPage"
             Title=""
             BackgroundColor="#121212">

    <StackLayout BackgroundColor="#121212" Padding="20">
        <Label Text="Task" TextColor="White" FontSize="24"/>
        <Entry BackgroundColor="#121212" TextColor="White" FontSize="18" Placeholder="Type something.." Text="{Binding TodoItem.Title}" />
        <Button Text="Save" BackgroundColor="#387478" FontSize="18" Margin="0,15,0,0" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>